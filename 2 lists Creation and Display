#include <stdio.h>
#include <stdlib.h>

struct node
{
    int data;
    struct node *next;
}*head, *temp, *p;

typedef struct node node;

node * createList(node * q, int n)
{
    int i;
    for(i=0; i<n; i++)
    {
    temp = (node*) malloc(sizeof(node));
    temp->next = NULL;
    printf("Enter the data for node %d : ", i+1);
    scanf("%d", &(temp->data));
    
        if (q == NULL)
    {
        q = temp;
    }
        else
        {
            p = q;
            while(p->next != NULL)
            {
                p = p->next;
            }
            p->next = temp;
        }

    }
    return q;
}

void displayList(node* q)
{
    node *p = q;
    while(p!= NULL)
    {
        printf("%d ", p->data);
        p = p->next;
    }
}

int main()
{
    int n, x;
    node* HEAD1 = NULL;
    node* h1, * h2;
    printf("Enter how many nodes you want to create : ");
    scanf("%d", &n);
    h1 = createList(HEAD1, n);
    displayList(h1);
    
    printf("\n");
    printf("Do you wanna create another list? Press 1 for Yes, Press 0 for No\n");
    scanf("%d", &x);
    
    if(x==1)
    {
        node* HEAD2 = NULL;
        printf("How many nodes do you want? ");
        scanf("%d", &n);
        h2 = createList(HEAD2, n);
        displayList(h2);
    }
    else{
        printf("Ok\n");
        h2 = NULL;
    }

    displayList(h1);
    displayList(h2);
}

